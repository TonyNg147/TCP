# Based on the LLVM style, but with custom settings.
BasedOnStyle: LLVM

# Use tabs for indentation.
UseTab: Always

# Set the number of columns used for an indentation step.
IndentWidth: 4

# The width of a tab character.
TabWidth: 4

# Wrap lines at 80 characters.
ColumnLimit: 80

# The style of brace wrapping for control statements (like if/for/while).
# This example uses the "Attach" style, like LLVM.
BreakBeforeBraces: Attach

# Don't indent class access modifiers (e.g., public:, private:).
AccessModifierOffset: -4



SortIncludes: true
IncludeBlocks: Regroup

IncludeCategories:
  - Regex: '^<([a-zA-Z0-9/_]+)>$'
    Priority: 1
    SortPriority: 1
    # comment: C++ STL headers

  - Regex: '^<boost/.*>$'
    Priority: 2
    SortPriority: 2
    # comment: Boost headers

  - Regex: '^"(.*)"$'
    Priority: 3
    SortPriority: 3
    # comment: Local project headers